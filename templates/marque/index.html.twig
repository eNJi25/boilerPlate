{% extends 'base.html.twig' %}

{% block title %}Marques{% endblock %}

{% block body %}

<h1 class="py-2 text-center">Liste des marques existantes</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nom</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        {% for marque in marques %}
        <tr>
            <td>{{marque.id}}</td>
            <td>{{marque.libelle}}</td>
            <td>
                <a href="{{path('marque_show', {'id': marque.id})}}" class="btn btn-primary">DÃ©tails</a>
                <a href="{{path('marque_edit', {'id': marque.id})}}" class="btn btn-secondary">Modifier</a>
                <a href="{{path('marque_delete', {'id': marque.id})}}" class="btn btn-danger">Supprimer</a>
            </td>
        </tr>
        {% endfor %}

    </tbody>
</table>
<div class="d-flex justify-content-center">
    <a href="{{path('marque_create')}}" class="btn btn-primary ">Ajouter une marque</a>
</div>


{% endblock %}